@model Websitebanhang.Models.Product

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <div class="row">
            <div class="col-md-6 text-center">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" style="max-width: 100%; height: auto;">
                }
            </div>
            <div class="col-md-6 d-flex flex-column justify-content-center">
                <h2 class="text-primary">@Model.Name</h2>
                <h3 class="text-danger">Price: $@Model.Price</h3>
                <p class="text-muted">@Model.Description</p>
                <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
            </div>
        </div>
    </div>
</div>