@model Websitebanhang.Models.Category

@{
    ViewData["Title"] = "Chi tiết danh mục";
}

<h2>Chi tiết danh mục</h2>

<div>
    <h4>Danh mục #@Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Tên danh mục
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>